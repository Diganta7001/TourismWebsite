<% layout('./layouts/boilerplate.ejs') %>
<body>
    <div class="container mt-4">
        <h3 class="page-heading">All Listings</h3>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 listing-grid">
            <% for (let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card listing-card">
                    <div class="listing-img-wrapper">
                        <img src="<%= listing.image.url %>" class="card-img-top">
                    </div>
                    <div class="card-body">
                        <h5><%= listing.title %></h5>
                        <p><%= listing.description %><br>
                        <b>&#36 <%= listing.price.toLocaleString("en-US") %>/Night</b></p>
                    </div>
                </div>
            </a>
            <% } %>
        </div>
    </div>
</body>

</html>
