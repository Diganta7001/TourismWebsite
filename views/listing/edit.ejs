<% layout('./layouts/boilerplate.ejs') %>

<body>
    <h1>Edit New Listing</h1>
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT">
        <input type="text" name="listing[title]" placeholder="enter title" value="<%=listing.title%>">
        <br><br>
        <textarea type="text" name="listing[description]" placeholder="add description" ><%=listing.description%></textarea>
        <br><br>
        <input type="number" name="listing[price]" placeholder="enter price" value="<%=listing.price%>">
        <br><br>
        <input type="text" name="listing[image][url]" placeholder="enter image url" value="<%=listing.image.url%>">
        <br><br>
        <input type="text" name="listing[location]" placeholder="enter location" value="<%=listing.location%>">
        <br><br>
        <input type="text" name="listing[country]" placeholder="enter country" value="<%=listing.country%>">
        <br><br>
        <button>Submit</button>
    </form>
</body>
</html>