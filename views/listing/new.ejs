<% layout('./layouts/boilerplate.ejs') %>

<body>
    <div class="container form-page">
        <h3 class="page-heading">Add New Listing</h3>

        <div class="form-card">
            <form action="/newListing" method="post" class="listing-form">
                
                <div class="form-group">
                    <input type="text" name="listing[title]" placeholder="Title">
                </div>

                <div class="form-group">
                    <textarea name="listing[description]" placeholder="Description"></textarea>
                </div>

                <div class="form-group">
                    <input type="number" name="listing[price]" placeholder="Price">
                </div>

                <div class="form-group">
                    <input type="text" name="listing[image][url]" placeholder="Image URL">
                </div>

                <div class="form-group">
                    <input type="text" name="listing[location]" placeholder="Location">
                </div>

                <div class="form-group">
                    <input type="text" name="listing[country]" placeholder="Country">
                </div>

                <button class="btn-submit">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>
